@namespace BlazorBootstrap
@inherits BlazorBootstrapComponentBase

<CascadingValue IsFixed="true" Value="@AutoClose" Name="AutoClose">
    <CascadingValue IsFixed="true" Value="@AutoCloseBehavior" Name="AutoCloseBehavior">
        <CascadingValue IsFixed="true" Value="@Color" Name="Color">
            <CascadingValue IsFixed="true" Value="@Disabled" Name="Disabled">
                <CascadingValue IsFixed="true" Value="@Size" Name="Size">
                    <CascadingValue IsFixed="true" Value="@Split" Name="Split">
                        <div @ref="@Element" id="@Id" class="@BootstrapClass.ButtonGroup @EnumExtensions.DropdownDirectionClassMap[Direction] @Class" @attributes="@AdditionalAttributes">
                            @if (ChildContent != null)
                            {
                                @ChildContent
                            }
                        </div>
                    </CascadingValue>
                </CascadingValue>
            </CascadingValue>
        </CascadingValue>
    </CascadingValue>
</CascadingValue>
