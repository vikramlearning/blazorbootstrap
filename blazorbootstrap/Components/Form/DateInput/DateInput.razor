@namespace BlazorBootstrap
@inherits BlazorBootstrapComponentBase
@typeparam TValue

<input @ref="@Element"
       type="date"
       id="@Id"
       class="@BootstrapClass.FormControl @Class @FieldCssClasses"
       max="@formattedMax"
       min="@formattedMin"
       value="@formattedValue"
       data-current-value="@Value"
       data-current-formatted-value="@formattedValue"
       disabled="@Disabled"
       placeholder="@Placeholder"
       autocomplete="@(AutoComplete.ToString().ToLowerInvariant())"
       @attributes="@AdditionalAttributes"
       @onchange="OnChange"/>
