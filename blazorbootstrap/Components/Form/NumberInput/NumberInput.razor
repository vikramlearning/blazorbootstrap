@namespace BlazorBootstrap
@inherits BlazorBootstrapComponentBase
@typeparam TValue

<input @ref="@Element"
       type="number"
       id="@Id"
       class="@BootstrapClass.FormControl @EnumExtensions.TextAlignmentClassMap[TextAlignment] @Class @FieldCssClasses"
       value="@GetInvariantNumber(Value)"
       step="@Step?.ToString(CultureInfo.InvariantCulture)"
       disabled="@Disabled"
       placeholder="@Placeholder"
       autocomplete="@(AutoComplete.ToString().ToLowerInvariant())"
       @attributes="@AdditionalAttributes"
       @onchange="OnChange"/>
