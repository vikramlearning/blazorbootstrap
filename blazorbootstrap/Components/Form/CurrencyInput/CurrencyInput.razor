@namespace BlazorBootstrap
@inherits BlazorBootstrapComponentBase
@typeparam TValue

<input @ref="@Element"
       type="text"
       id="@Id"
       class="@BootstrapClass.FormControl @EnumExtensions.TextAlignmentClassMap[TextAlignment] @Class @FieldCssClasses"
       value="@formattedValue"
       data-current-value="@Value"
       data-current-formatted-value="@formattedValue"
       disabled="@Disabled"
       placeholder="@Placeholder"
       autocomplete="@AutoComplete.ToString().ToLowerInvariant()"
       @attributes="@AdditionalAttributes"
       @onchange="OnChange" />
