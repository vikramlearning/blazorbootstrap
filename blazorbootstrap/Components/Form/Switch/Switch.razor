@namespace BlazorBootstrap
@inherits BlazorBootstrapComponentBase
@preservewhitespace true

<div class="@BootstrapClass.FormCheck @BootstrapClass.FormSwitch @(Reverse ? BootstrapClass.FormCheckReverse : "") @Class">
    <input @ref="@Element"
           type="checkbox"
           id="@Id"
           class="@BootstrapClass.FormCheckInput"
           disabled="@Disabled"
           checked="@Value"
           role="switch"
           @attributes="@AdditionalAttributes"
           @onchange="OnChange" />

    @if (!string.IsNullOrWhiteSpace(Label))
    {
        <label class="form-check-label" for="@Id">@Label</label>
    }
</div>
