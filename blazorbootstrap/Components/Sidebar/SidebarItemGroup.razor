@namespace BlazorBootstrap
@inherits BaseComponent

<nav @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
    @if(NavItems is not null && NavItems.Any())
    {
        foreach (var item in NavItems)
        {
            <SidebarItem IconName="@item.IconName" CustomIconName="@item.CustomIconName" Href="@item.Href" Text="@item.Text" Match="@item.Match" Target="@item.Target" HasChilds="@item.HasChilds" ChildItems="@item.ChildItems" />
        }
    }
</nav>