@namespace BlazorBootstrap
@inherits BlazorBootstrapComponentBase

<div @ref="@Element" id="@Id" class="@BootstrapClass.ToastContainer @BootstrapClass.PositionFixed @EnumExtensions.ToastsPlacementClassMap[Placement] @Class" @attributes="@AdditionalAttributes">
    @if (Messages != null && Messages.Any())
    {
        foreach (var item in Messages)
        {
            if (string.IsNullOrWhiteSpace(item.Title))
            {
                <SimpleToast @key="@item" AutoHide="@(AutoHide || item.AutoHide)" Delay="@Delay" ShowCloseButton="@ShowCloseButton" ToastMessage="@item" Shown="OnToastShownAsync" Hidden="OnToastHiddenAsync"></SimpleToast>
            }
            else
            {
                <Toast @key="@item" AutoHide="@(AutoHide || item.AutoHide)" Delay="@Delay" ShowCloseButton="@ShowCloseButton" ToastMessage="@item" Shown="OnToastShownAsync" Hidden="OnToastHiddenAsync"></Toast>
            }
        }
    }
</div>
