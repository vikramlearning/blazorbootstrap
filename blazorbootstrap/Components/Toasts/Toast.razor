@namespace BlazorBootstrap
@inherits BaseComponent

<CascadingValue Value="@this" IsFixed="true">
    <div @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
        <div class="toast-header">
            @if (!string.IsNullOrWhiteSpace(ToastMessage.ImageSource))
            {
                <img src="@ToastMessage.ImageSource" class="rounded me-2" alt="toast image">
            }
            else
            {
                <Icon Name="@ToastMessage.IconName" CustomIconName="@ToastMessage.CustomIconName" class="me-2"></Icon>
            }
            <strong class="me-auto">@ToastMessage.Title</strong>
            <small class="text-muted">@ToastMessage.HelpText</small>
            @if (!AutoHide || ShowCloseButton)
            {
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            }
        </div>
        <div class="toast-body">
            @ToastMessage.Message
        </div>
    </div>
</CascadingValue>