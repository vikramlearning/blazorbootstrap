@namespace BlazorBootstrap
@inherits BlazorBootstrapComponentBase

<div @ref="@Element" id="@Id" class="@BootstrapClass.Toast @Class" @attributes="@AdditionalAttributes">
    <div class="toast-header">
        <Icon Name="@IconName" CustomIconName="@ToastMessage.CustomIconName" class="@IconClass"></Icon>
        <strong class="me-auto">@ToastMessage.Title</strong>
        <small class="text-muted">@ToastMessage.HelpText</small>
        @if (!AutoHide || ShowCloseButton)
        {
            <button type="button" class="btn-close" aria-label="Close" @onclick="(async() => await HideAsync())"></button>
        }
    </div>
    <div class="toast-body">
        @ToastMessage.Message
    </div>
    <Progress Height="3">
        <ProgressBar @ref="toastProgressBar" Color="@ProgressColor" Width="toastProgressBarWidth"/>
    </Progress>
</div>
