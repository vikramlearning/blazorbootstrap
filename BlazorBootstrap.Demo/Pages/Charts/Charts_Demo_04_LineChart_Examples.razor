<LineChart @ref="lineChart" />

@code {
    private LineChart lineChart;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var data = new ChartData
            {
                Labels = new List<string> { "Team 1", "Team 2", "Team 3", "Team 4", "Team 5", "Team 6" },
                Datasets = new List<IChartDataset>()
                {
                    new LineChartDataset()
                    {
                        Label = "Test 1",
                        Data = new List<double>{ 19, 70, 191, 75, 89, 55},
                        BackgroundColor = new List<string> { "rgba(255, 99, 132, 0.2)" },
                        BorderColor = new List<string> { "rgba(255, 99, 132, 1)" },
                        BorderWidth = new List<double> { 2 },
                        HoverBorderWidth = new List<double>{4},
                        PointBackgroundColor = new List<string>{ "rgba(255, 99, 132, 0.2)" },
                        PointBorderColor = new List<string>{ "rgba(255, 99, 132, 1)" },
                        PointRadius = new List<int>{0}, // hide points
                        PointHoverRadius = new List<int>{4},
                    }
                }
            };

        var options = new ChartOptions();
        options.Responsive = true;

        await lineChart.UpdateAsync(data, options);

        await base.OnAfterRenderAsync(firstRender);
    }
}
