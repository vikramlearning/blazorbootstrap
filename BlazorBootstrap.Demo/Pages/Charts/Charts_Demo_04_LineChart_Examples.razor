<LineChart @ref="lineChart" TChartDataset="LineChartDataset" Width="500" />

@code {
    private LineChart<LineChartDataset> lineChart;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var data = new ChartData<LineChartDataset>
            {
                Labels = new List<string> { "Team 1", "Team 2", "Team 3", "Team 4", "Team 5", "Team 6" },
                Datasets = new List<LineChartDataset>()
                {
                    new LineChartDataset()
                    {
                        Label = "Test 1",
                        Data = new List<int>{ 189, 170, 111, 215, 89, 155},
                        BackgroundColor = "rgba(255, 99, 132, 0.2)",
                        BorderColor = "rgba(255, 99, 132, 1)",
                        BorderWidth = 1
                    }
                }
            };

        var options = new ChartOptions();

        await lineChart.Update(data, options);

        await base.OnAfterRenderAsync(firstRender);
    }
}
