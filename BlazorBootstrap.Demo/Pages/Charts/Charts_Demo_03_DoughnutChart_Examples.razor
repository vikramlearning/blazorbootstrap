<DoughnutChart @ref="doughnutChart" Width="300" Height="300" />

@code {
    private DoughnutChart doughnutChart;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var data = new ChartData
            {
                Labels = new List<string> { "Team 1", "Team 2", "Team 3", "Team 4", "Team 5", "Team 6" },
                Datasets = new List<IChartDataset>()
                {
                    new DoughnutChartDataset()
                    {
                        Data = new List<int>{ 189, 170, 111, 215, 89, 155},
                        BackgroundColor = new List<string>
                        {
                            "rgba(255, 99, 132, 0.2)",
                            "rgba(54, 162, 235, 0.2)",
                            "rgba(255, 206, 86, 0.2)",
                            "rgba(75, 192, 192, 0.2)",
                            "rgba(153, 102, 255, 0.2)",
                            "rgba(255, 159, 64, 0.2)"
                        },
                        BorderColor = new List<string>
                        {
                            "rgba(255, 99, 132, 1)",
                            "rgba(54, 162, 235, 1)",
                            "rgba(255, 206, 86, 1)",
                            "rgba(75, 192, 192, 1)",
                            "rgba(153, 102, 255, 1)",
                            "rgba(255, 159, 64, 1)"
                        },
                        BorderWidth = new List<double>{ 1 }
                    }
                }
            };

        var options = new ChartOptions();

        await doughnutChart.Update(data, options);

        await base.OnAfterRenderAsync(firstRender);
    }
}
