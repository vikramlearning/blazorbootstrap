<Modal @ref="modal" title="Modal title" UseStaticBackdrop="true">

       <BodyTemplate>
           I will not close if you click outside me. Don't even try to press escape key.
       </BodyTemplate>

       <FooterTemplate>
           <Button Color="ButtonColor.Secondary" @onclick="HideModalAsync">Close</Button>
           <Button Color="ButtonColor.Primary">Understood</Button>
       </FooterTemplate>

</Modal>

<Button Color="ButtonColor.Primary" @onclick="ShowModalAsync">Launch static backdrop modal</Button>

@code {
    private Modal modal;

    private async Task ShowModalAsync()
    {
        await modal?.ShowAsync();
    }

    private async Task HideModalAsync()
    {
        await modal?.HideAsync();
    }
}