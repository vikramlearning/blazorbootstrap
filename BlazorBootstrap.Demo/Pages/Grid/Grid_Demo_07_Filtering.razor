<Grid TItem="Employee" class="table table-hover table-bordered table-striped" DataProvider="EmployeesDataProvider" AllowFiltering="true">
    <GridColumn TItem="Employee" HeaderText="Id" SortKeySelector="@(item => item.Id)" IsDefaultSortColumn="true" PropertyName="Id">
        @context.Id
    </GridColumn>
    <GridColumn TItem="Employee" HeaderText="First Name" SortKeySelector="@(item => item.FirstName)" PropertyName="FirstName">
        @context.FirstName
    </GridColumn>
    <GridColumn TItem="Employee" HeaderText="Last Name" SortKeySelector="@(item => item.LastName)" PropertyName="LastName">
        @context.LastName
    </GridColumn>
    <GridColumn TItem="Employee" HeaderText="Designation" SortKeySelector="@(item => item.Designation)" PropertyName="Designation">
        @context.Designation
    </GridColumn>
    <GridColumn TItem="Employee" HeaderText="Salary" SortKeySelector="@(item => item.DOJ)" PropertyName="DOJ">
        @context.DOJ
    </GridColumn>
</Grid>

@code {
    private IEnumerable<Employee> employees;

    protected override void OnInitialized()
    {
        employees = new List<Employee>
        {
            new Employee { Id = 101, FirstName = "Alice", LastName = "Reddy", Designation = "AI Engineer", DOJ = new DateTime(1987, 8, 17) },
            new Employee { Id = 103, FirstName = "Bob", LastName = "Roy", Designation = "Senior DevOps Engineer", DOJ = new DateTime(1987, 8, 17) },
            new Employee { Id = 104, FirstName = "John", LastName = "Papa", Designation = "Data Engineer", DOJ = new DateTime(1987, 8, 17) },
            new Employee { Id = 105, FirstName = "Pop", LastName = "Two", Designation = "Associate Architect", DOJ = new DateTime(1987, 8, 17) },
            new Employee { Id = 104, FirstName = "Ronald", LastName = "Dire", Designation = "Senior Data Engineer", DOJ = new DateTime(1987, 8, 17) },
            new Employee { Id = 106, FirstName = "Line", LastName = "K", Designation = "Architect", DOJ = new DateTime(1987, 8, 17) }
        };
    }

    private async Task<GridDataProviderResult<Employee>> EmployeesDataProvider(GridDataProviderRequest<Employee> request)
    {
        return await Task.FromResult(request.ApplyTo(employees));
    }
}
