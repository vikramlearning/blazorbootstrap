@page "/tooltips"

<PageTitle>@title</PageTitle>

<MetaTags PageUrl="@pageUrl" Title="@title" Description="@description" ImageUrl="@imageUrl" />

<h1 class="my-4">Blazor Tooltips</h1>

<SectionHeading Size="HeadingSize.H2" Text="Examples" PageUrl="@pageUrl" HashTagName="examples" />
<Demo Type="typeof(Tooltips_Demo_01_Examples)" />

<SectionHeading Size="HeadingSize.H2" Text="Disabled button with tootip" PageUrl="@pageUrl" HashTagName="disabled-button-with-tootip" />
<Demo Type="typeof(Tooltips_Demo_02_Disabled_Button_With_Tooltip)" />

<SectionHeading Size="HeadingSize.H2" Text="Icon with click event" PageUrl="@pageUrl" HashTagName="icon-with-click-event" />
<Demo Type="typeof(Tooltips_Demo_03_Icon_With_Click_Event)" />

<Callout Type="CalloutType.Tip">
    By default, <code>Button</code> supports tooltips via <code>TooltipTitle</code> and <code>TooltipPlacement</code> parameters.
    See <a href="/buttons#tooltip">Buttons - Tooltip</a>.
</Callout>

@code {
    private string pageUrl = "/tooltips";
    private string title = "Blazor Tooltip Component";
    private string description = "Use Blazor Bootstrap tooltip component to add custom tooltips to your web pages.";
    private string imageUrl = "https://i.imgur.com/PGlmZS3.jpg";
}