<div class="mb-3">
    <label class="form-label">Enter int number</label>
    <CurrencyInput TValue="int" @bind-Value="@amount" ShowCurrencySymbol="true" />
</div>

<div class="mb-3">
    <label class="form-label">Enter int? number</label>
    <CurrencyInput TValue="int?" @bind-Value="@amount2" ShowCurrencySymbol="true" />
</div>

<div class="mb-3">
    <label class="form-label">Enter float number</label>
    <CurrencyInput TValue="float" @bind-Value="@amount3" ShowCurrencySymbol="true" />
</div>

<div class="mb-3">
    <label class="form-label">Enter float? number</label>
    <CurrencyInput TValue="float?" @bind-Value="@amount4" ShowCurrencySymbol="true" />
</div>

<div class="mb-3">
    <label class="form-label">Enter double number</label>
    <CurrencyInput TValue="double" @bind-Value="@amount5" ShowCurrencySymbol="true" />
</div>

<div class="mb-3">
    <label class="form-label">Enter double? number</label>
    <CurrencyInput TValue="double?" @bind-Value="@amount6" ShowCurrencySymbol="true" />
</div>

<div class="mb-3">
    <label class="form-label">Enter decimal number</label>
    <CurrencyInput TValue="decimal" @bind-Value="@amount7" ShowCurrencySymbol="true" />
</div>

<div class="mb-3">
    <label class="form-label">Enter decimal? number</label>
    <CurrencyInput TValue="decimal?" @bind-Value="@amount8" ShowCurrencySymbol="true" />
</div>

@code {
    private int amount;
    private int? amount2;
    private float amount3;
    private float? amount4;
    private double amount5;
    private double? amount6;
    private decimal amount7;
    private decimal? amount8;
}
