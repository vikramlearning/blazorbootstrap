    <Demo Type="typeof(Tooltips_Demo_04_Dynamically_Update_Tooltip_Text)" />
</Section>

<Section Size="HeadingSize.H2" Name="Tooltip with link" PageUrl="@pageUrl" Link="tooltip-with-link">
    <Demo Type="typeof(Tooltips_Demo_05_Tooltip_With_Navigation_Link)" />
</Section>*@
@* END: Commented Examples *@

<Section Size="HeadingSize.H2" Name="Custom tooltips" PageUrl="@pageUrl" Link="custom-tooltips">
    <div class="mb-3">
        Blazor Bootstrap includes several predefined tooltip styles, each serving its own semantic purpose. 
        The <b>Color</b> parameter can be used to customize the color of the tooltip.
    </div>
    <Demo Type="typeof(Tooltips_Demo_06_Colors)" Tabs="true" />
</Section>

<Section Size="HeadingSize.H2" Name="Dynamically change the tooltip color" PageUrl="@pageUrl" Link="dynamically-change-the-tooltip-color">
    <Demo Type="typeof(Tooltips_Demo_07_Dynamically_Change_Color)" />
</Section>

<Section Size="HeadingSize.H2" Name="Tooltip with HTML" PageUrl="@pageUrl" Link="tooltip-with-html">
    <Demo Type="typeof(Tooltips_Demo_08_HTML)" />
</Section>

@code {
    private const string pageUrl = DemoRouteConstants.Demos_URL_Tooltips;
    private const string pageTitle = "Blazor Tooltip";
    private const string pageDescription = "Use Blazor Bootstrap tooltip component to add custom tooltips to your web pages.";
    private const string metaTitle = "Blazor Tooltip Component";
    private const string metaDescription = "Use Blazor Bootstrap tooltip component to add custom tooltips to your web pages.";
    private const string imageUrl = "https://i.imgur.com/PGlmZS3.jpg";
}
