@attribute [Route(pageUrl)]
@layout DemosMainLayout

<DemosPageHeadSection PageUrl="@pageUrl"
                      PageTitle="@pageTitle"
                      PageDescription="@pageDescription"
                      MetaTitle="@metaTitle"
                      MetaDescription="@metaDescription"
                      ImageUrl="@imageUrl" />

<DocsLink Href="@DemoRouteConstants.Docs_URL_Tooltips" />

<Section Size="HeadingSize.H2" Name="Examples" PageUrl="@pageUrl" Link="examples">
    <Demo Type="typeof(Tooltips_Demo_01_Examples)" />
</Section>

<Section Size="HeadingSize.H2" Name="Disabled button with tootip" PageUrl="@pageUrl" Link="disabled-button-with-tootip">
    <Demo Type="typeof(Tooltips_Demo_02_Disabled_Button_With_Tooltip)" />
</Section>

<Callout Color="CalloutColor.Success">
    By default, <code>Button</code> supports tooltips via <code>TooltipTitle</code> and <code>TooltipPlacement</code> parameters.
    See <a href="/buttons#tooltip">Buttons - Tooltip</a>.
</Callout>

<Section Size="HeadingSize.H2" Name="Icon with click event" PageUrl="@pageUrl" Link="icon-with-click-event">
    <Demo Type="typeof(Tooltips_Demo_03_Icon_With_Click_Event)" />
</Section>

@* START: Commented Examples *@
